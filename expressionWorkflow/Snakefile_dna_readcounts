from os import path

import numpy as np

import pandas as pd

ref = "genome/TX_fullMerge_main.fa"
dir = "STARindex/merged_TX_noMatPAR_main/"
mythreads = 4

PREFIX = "jpop"

with open("DNA.samples_full.txt", "r") as file:
    samples = [line.strip() for line in file if line.strip()]

rule all:
     input:
          #fc = expand("readCountsRNAeQTL/{sample}.featureCounts", sample = samples), 
          mc = "readCountsDNAeQTL/rhastTXeQTLdna.txt" 

rule dna_read_counts:
    input:
        aln= 'DNAbams/eqtl_dna_bams/{sample}_sortMarkDups.bam',
        anno= 'genome/merged_TX_noMatPARlarge_txanno.gtf'
    output:
        fc = temp("readCountsDNAeQTL/{sample}.featureCounts"),
        fcsum= "readCountsDNAeQTL/{sample}.featureCounts.summary"
    log:
        'logs/featureCounts/{sample}.log'
    threads: 10
    shell:
        """
        featureCounts -T {threads} -p --countReadPairs -t exon -g gene_id -a {input.anno} -o {output.fc} {input.aln} &> {log}
        """
 
rule dna_merge_counts:
    input:
        expand("readCountsDNAeQTL/{sample}.featureCounts", sample = samples)
    output:
        "readCountsDNAeQTL/rhastTXeQTLdna.txt"
    run:
        # Merge count files.
        frames = (pd.read_csv(fp, sep="\t", skiprows=1,
                        index_col=list(range(6)))
            for fp in input)
        merged = pd.concat(frames, axis=1)

        # Extract sample names.
        merged = merged.rename(
            columns=lambda c: path.splitext(path.basename(c))[0])

        merged.to_csv(output[0], sep="\t", index=True)        


