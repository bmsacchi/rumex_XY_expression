samples = ['RsgL1','RsgL2','RsgL3']
### workflow ###

# This rule establishes the names of output files from other rules
rule all:
     input:
          idx = "STARindex/Sagittatus",
          aln = expand("RNAbams/Sagittatus/{sample}Aligned.sortedByCoord.out.bam", sample = samples),
          bamidx = expand("RNAbams/Sagittatus/{sample}Aligned.sortedByCoord.out.bam.bai", sample = samples),

# This rule creates the STAR index
rule star_index:
    input:
        fasta = "/ohta2/Rumex/Dovetail_R_sagittatus/final_scaffolded/sagittatus_hap1.fa",
    output:
        directory("STARindex/Sagittatus"),
    threads: 8
    params:
        extra="",
    resources:
        tmpdir="/ohta2/bianca.sacchi/tmp"
    wrapper:
        "v2.6.1/bio/star/index"


# This rule maps rna reads to genome
rule star_pe_multi:
    input:
        fq1="fastqs/sagittatus/{sample}_R1.fastq.gz",
        fq2="fastqs/sagittatus/{sample}_R2.fastq.gz",
        idx="STARindex/Sagittatus"
    output:
        aln="RNAbams/Sagittatus/{sample}Aligned.sortedByCoord.out.bam",
        log="RNAbams/Sagittatus/{sample}Log.out",
        sj="RNAbams/Sagittatus/{sample}SJ.out.tab",
        log_final="RNAbams/Sagittatus/{sample}Log.final.out",
    params:
        prefix = "RNAbams/Sagittatus/{sample}",
    threads: 16
    resources:
        tmpdir="/ohta2/bianca.sacchi/tmp"
    shell:
         """
         STAR --runThreadN {threads} \
         --readFilesCommand zcat \
         --genomeDir {input.idx} \
         --readFilesIn {input.fq1} {input.fq2} \
         --outSAMtype BAM SortedByCoordinate \
         --twopassMode Basic \
         --outSAMattrRGline ID:{wildcards.sample} \
         --outFileNamePrefix {params.prefix} \
         --outTmpDir {resources.tmpdir}/{wildcards.sample} \
         """
        
rule index_bam:
    """
    Index sorted BAM with marked duplicates
    """
    input:
        aln={rules.star_pe_multi.output.aln}
    output:
        bamidx = 'RNAbams/Sagittatus/{sample}Aligned.sortedByCoord.out.bam.bai',
    log: 'logs/index_bam/{sample}_index_bam.rna.fullmerge.log'
    threads: 16
    resources:
          tmpdir="/ohta2/bianca.sacchi/tmp"
    shell:
        """
        samtools index -@ {threads} {input} 2> {log}
        """
